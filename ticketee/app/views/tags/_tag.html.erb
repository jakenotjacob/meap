<span class='tag'>
<% if can?(:tag, @ticket.project) || current_user.admin? %>
  <%= link_to "x",
    #Disassociate ticket and tag; tag not yet deleted
    remove_ticket_tag_path(@ticket, tag),
    method: :delete,
    #Remote for async request
    remote: true,
    id: "delete-#{tag.name.parameterize}"
  %>
<% end %>
<%= tag.name %>
</span>
